<GameScreen>:

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            text: 'Main Menu'
            on_press: root.manager.current = 'menu'
            size_hint: .3, .3
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            text: 'Reset'
            on_press: root.reset()
            size_hint: .3, .3
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        Label:
            text: "{:.2f}".format(root.time.timeText)
            size_hint: .3, .3
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        Label:
            text: root.orders[root.cur_img]
            size_hint: .5, .5
    FloatLayout: