#:include minigame/layouts/lb.kv
#:include minigame/layouts/game.kv

<MenuScreen>:
    MenuLayout:
        rows: 4
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Label:
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: 'minigame/images/main_bg.jpg'
                    Rectangle:
                        pos:self.center_x-self.texture_size[0]/2, self.center_y-self.texture_size[1]/2
                        size: self.texture_size
                font_size: '50sp'
                text: 'Bio Memorization Game'
                color: 0, 0, 0, 1
        Button:
            text: 'Start'
            font_size: '30sp'
            size_hint: 1, .3
            on_press: root.manager.current = 'game'
        
        Button: 
            text: 'Leaderboard'
            font_size: '30sp'
            on_press: root.manager.current = 'lb'
            size_hint: 1, .3

<MenuLayout>:
    